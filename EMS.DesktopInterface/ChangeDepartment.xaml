<Window x:Class="EMS.DesktopInterface.ChangeDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Department" Height="215" Width="254">
    <Grid Background="#FFE5E5E5">
        <Label Content="Current&#xD;&#xA;Department:" HorizontalAlignment="Left" Margin="20,2,0,0" VerticalAlignment="Top" Height="41" Width="94" />
        <Label Content="From:" HorizontalAlignment="Left" Margin="57,39,0,0" VerticalAlignment="Top" Height="26" />
        <Label Content="New&#xD;&#xA;Department:" HorizontalAlignment="Left" Margin="21,65,0,0" VerticalAlignment="Top" Height="42" />
        <Label Content="Effective on:" HorizontalAlignment="Left" Margin="23,107,0,0" VerticalAlignment="Top" Height="26" Width="74" />

        <TextBox x:Name="CurrentDepartmentName" HorizontalAlignment="Left" Height="23" Margin="104,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TabIndex="1" IsEnabled="False" IsTabStop="False" />
        <TextBox x:Name="CurrentDepartmentDate" HorizontalAlignment="Left" Height="23" Margin="104,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TabIndex="2" IsEnabled="False" IsTabStop="False" />
        <ComboBox x:Name="NewDepartment" HorizontalAlignment="Left" Height="23" Margin="104,79,0,0" VerticalAlignment="Top" Width="120" TabIndex="3" Loaded="NewDepartment_Loaded" />
        <DatePicker x:Name="NewDepartmentStartsOn" HorizontalAlignment="Left" Height="24" Margin="104,107,0,0" VerticalAlignment="Top" Width="120" TabIndex="4" Loaded="NewDepartmentStartsOn_Loaded" />

        <Button x:Name="BtnOk" Content="OK" HorizontalAlignment="Left" Margin="74,142,0,0" VerticalAlignment="Top" Width="75" TabIndex="5" Click="BtnOk_Click"/>
        <Button x:Name="BtnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="154,142,0,0" VerticalAlignment="Top" Width="75" IsCancel="True" TabIndex="6" Click="BtnCancel_Click"/>
    </Grid>
</Window>

